<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/header_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/activity_content"/>


    <LinearLayout
        android:id="@+id/activity_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/header_fragment_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/app_light_gray">


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="158dp"
            android:layout_height="170dp"
            android:text="Select Image"
            android:textSize="18sp"
            android:background="@drawable/large_blue_btn"
            android:drawableBottom="@drawable/ic_file_image_solid"
            android:paddingBottom="20dp"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/white"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="158dp"
            android:layout_height="170dp"
            android:text="Take Photo"
            android:textSize="18sp"
            android:background="@drawable/large_blue_btn"
            android:drawableBottom="@drawable/ic_camera_solid"
            android:paddingBottom="20dp"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/white"
            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>