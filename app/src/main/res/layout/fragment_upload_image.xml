<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.UploadImageFragment">



    <LinearLayout
        android:id="@+id/uf_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/uf_button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="20dp"

            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/uf_select_new_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Select New Image"
                android:layout_weight="1"
                android:textSize="18sp"
                android:background="@drawable/small_blue_btn"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/white"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/uf_take_photo_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Take New Photo"
                android:textSize="18sp"
                android:layout_weight="1"
                android:background="@drawable/small_blue_btn"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/white"
                />

        </LinearLayout>


        <!-- TODO: Change to proper element  -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="300dp"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:src="@mipmap/ic_launcher_round" />

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:text="Upload and Search"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/large_blue_btn"
            android:drawableBottom="@drawable/ic_camera_solid"
            android:paddingHorizontal="20dp"
            android:paddingBottom="20dp"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            />

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>